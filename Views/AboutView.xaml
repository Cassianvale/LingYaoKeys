<?xml version="1.0" encoding="utf-8"?>

<Page x:Class="WpfApp.Views.AboutView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="关于"
      x:Name="AboutViewPage">
    <Grid ClipToBounds="True">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- 顶部标题和按钮区域 -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="关于"
                           FontSize="24"
                           FontWeight="Bold" />

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal">
                    <Button Content="访问 GitHub 仓库"
                            Command="{Binding OpenGitHubCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Height="35"
                            Width="130"
                            Padding="0,0"
                            Margin="0,0,10,0" />

                    <Button Content="支持作者"
                            Command="{Binding ShowQRCodeCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Height="35"
                            Width="100"
                            Padding="0,0" />
                </StackPanel>
            </Grid>

            <!-- 内容区域 -->
            <Grid Grid.Row="1">
                <!-- 使用更简单的方式显示内容 -->
                <ScrollViewer x:Name="DocumentViewer"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Visibility="Collapsed">
                    <RichTextBox x:Name="MainDocument"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 IsReadOnly="True"
                                 Padding="20"
                                 FontSize="14"
                                 FontFamily="Microsoft YaHei">
                        <FlowDocument>
                            <!-- 内容将在代码中动态添加 -->
                        </FlowDocument>
                    </RichTextBox>
                </ScrollViewer>

                <!-- 加载指示器 -->
                <Border x:Name="LoadingIndicator"
                        Background="#80FFFFFF"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Panel.ZIndex="1"
                        Visibility="Visible">
                    <Grid>
                        <Border Background="White"
                                CornerRadius="8"
                                Width="150"
                                Height="60">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10"
                                                  Direction="270"
                                                  ShadowDepth="2"
                                                  Opacity="0.2"
                                                  Color="#000000" />
                            </Border.Effect>
                            <StackPanel VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
                                <ProgressBar IsIndeterminate="True"
                                             Width="150"
                                             Height="8"
                                             Margin="0,0,0,5"
                                             Background="Transparent"
                                             BorderBrush="Transparent"
                                             Foreground="{StaticResource PrimaryBrush}" />
                                <TextBlock Text="正在加载..."
                                           HorizontalAlignment="Center"
                                           FontSize="14"
                                           Foreground="{StaticResource TextForegroundBrush}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- 错误信息显示 -->
                <Border x:Name="ErrorMessage"
                        Background="#FFFFFFFF"
                        BorderBrush="#FFDDDDDD"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        Margin="20"
                        Visibility="Collapsed"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="加载内容出错"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10" />
                        <TextBlock x:Name="ErrorDetails"
                                   Text="无法加载README内容，请检查资源文件是否存在。"
                                   TextWrapping="Wrap"
                                   Width="300"
                                   Foreground="#FF555555" />
                        <Button Content="刷新"
                                Command="{Binding RefreshCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,15,0,0"
                                HorizontalAlignment="Right" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>