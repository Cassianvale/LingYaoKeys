<Window x:Class="WpfApp.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="灵曜按键"
        Height="180"
        Width="420"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True">

    <Window.Resources>
        <!-- 动画资源 -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetName="MainBorder" 
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.5" 
                             EasingFunction="{StaticResource EaseOutFunction}"/>
        </Storyboard>
    </Window.Resources>

    <Border x:Name="MainBorder"
            Background="#1E1E1E"
            CornerRadius="12"
            BorderBrush="#2A2A2A"
            BorderThickness="1"
            Opacity="0"
            Effect="{StaticResource DropShadowEffect}">
        <Border.Triggers>
            <EventTrigger RoutedEvent="Border.Loaded">
                <BeginStoryboard Storyboard="{StaticResource FadeInStoryboard}"/>
            </EventTrigger>
        </Border.Triggers>
        
        <Grid>
            <!-- 背景渐变 -->
            <Border CornerRadius="12" ClipToBounds="True">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E1E1E" Offset="0"/>
                        <GradientStop Color="#262626" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <!-- 背景光晕效果 -->
                <Border.Effect>
                    <BlurEffect x:Name="GlowEffect" Radius="10" KernelType="Gaussian"/>
                </Border.Effect>
                
                <!-- 磨砂玻璃效果装饰 -->
                <Canvas>
                    <Ellipse Width="120" Height="120" Canvas.Left="-60" Canvas.Top="-60"
                            Opacity="0.05">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#2196F3" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Ellipse Width="100" Height="100" Canvas.Right="-50" Canvas.Bottom="-50"
                            Opacity="0.05">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#00BCD4" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                </Canvas>
            </Border>
            
            <!-- 内容区域 -->
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- 标题 -->
                <TextBlock Text="灵曜按键"
                        FontSize="22"
                        FontWeight="Light"
                        FontFamily="Microsoft YaHei UI Light"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,15">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="1" BlurRadius="3" 
                                        Direction="270" Opacity="0.3" Color="Black"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- 状态文本 -->
                <TextBlock x:Name="StatusText"
                        Grid.Row="1"
                        Text="正在启动..."
                        FontFamily="Microsoft YaHei UI"
                        FontSize="14"
                        Foreground="#E0E0E0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,0,0,15" />

                <!-- 进度条 -->
                <Grid Grid.Row="2">
                    <Border Background="#252525" 
                            CornerRadius="3"
                            Height="4"/>
                    <Border x:Name="ProgressBarContainer" 
                            CornerRadius="3"
                            Height="4" 
                            HorizontalAlignment="Left" 
                            Width="0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#2196F3" Offset="0" />
                                <GradientStop Color="#00BCD4" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>