<Window x:Class="WpfApp.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="灵曜按键"
        Height="180"
        Width="420"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- 自定义阴影效果 -->
        <DropShadowEffect x:Key="PrimaryShadowEffect" 
                          ShadowDepth="0" 
                          BlurRadius="15" 
                          Direction="0" 
                          Opacity="0.4" 
                          Color="#121212"/>
        
        <DropShadowEffect x:Key="SecondaryShadowEffect" 
                          ShadowDepth="2" 
                          BlurRadius="8" 
                          Direction="270" 
                          Opacity="0.3" 
                          Color="#121212"/>
                          
        <!-- 字体特效 -->
        <DropShadowEffect x:Key="TextPrimaryShadow" 
                          ShadowDepth="2" 
                          BlurRadius="5" 
                          Direction="315" 
                          Opacity="0.5" 
                          Color="#000000"/>
                          
        <DropShadowEffect x:Key="TextGlowShadow" 
                          ShadowDepth="0" 
                          BlurRadius="10" 
                          Direction="0" 
                          Opacity="0.3" 
                          Color="#7C4DFF"/>
                          
        <DropShadowEffect x:Key="TextInnerShadow" 
                          ShadowDepth="1" 
                          BlurRadius="2" 
                          Direction="0" 
                          Opacity="0.4" 
                          Color="#000000"/>
                          
        <!-- 缓动函数 -->
        <CubicEase x:Key="EaseOutFunction" EasingMode="EaseOut"/>
        
        <!-- 动画资源 -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetName="MainBorder" 
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.5" 
                             EasingFunction="{StaticResource EaseOutFunction}"/>
        </Storyboard>
    </Window.Resources>

    <!-- 外层阴影容器 -->
    <Grid>
        <!-- 辅助阴影层1 - 广域柔和阴影 -->
        <Border 
            Background="Transparent"
            CornerRadius="14"
            Margin="-2"
            Opacity="0.7">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Direction="0" 
                                  Opacity="0.25" Color="#121212"/>
            </Border.Effect>
        </Border>
        
        <!-- 辅助阴影层2 - 中等范围阴影 -->
        <Border 
            Background="Transparent"
            CornerRadius="13"
            Margin="-1"
            Opacity="0.8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="12" Direction="0" 
                                  Opacity="0.3" Color="#181818"/>
            </Border.Effect>
        </Border>
        
        <!-- 主内容容器 -->
        <Border x:Name="MainBorder"
                Background="#1E1E1E"
                CornerRadius="12"
                BorderBrush="#2A2A2A"
                BorderThickness="1"
                Opacity="0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="10" Direction="315" 
                                  Opacity="0.35" Color="#121212"/>
            </Border.Effect>
            
            <Grid>
                <!-- 背景渐变 - 使用多层渐变增强视觉效果 -->
                <Border CornerRadius="12" ClipToBounds="True">
                    <Border.Background>
                        <!-- 改为多色渐变背景 -->
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#1A1A1A" Offset="0"/>
                            <GradientStop Color="#222222" Offset="0.4"/>
                            <GradientStop Color="#282830" Offset="0.7"/>
                            <GradientStop Color="#252530" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    
                    <!-- 使用Grid作为Border的唯一子元素 -->
                    <Grid>
                        <!-- 装饰性渐变层 -->
                        <Grid>
                            <!-- 第一层装饰渐变 - 右上角色彩 -->
                            <Border CornerRadius="12" ClipToBounds="True" Opacity="0.2">
                                <Border.Background>
                                    <RadialGradientBrush Center="1,0" RadiusX="0.8" RadiusY="0.8" GradientOrigin="1,0">
                                        <GradientStop Color="#6200EA" Offset="0"/>
                                        <GradientStop Color="#3D5AFE" Offset="0.5"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                            </Border>
                            
                            <!-- 第二层装饰渐变 - 左下角色彩 -->
                            <Border CornerRadius="12" ClipToBounds="True" Opacity="0.15">
                                <Border.Background>
                                    <RadialGradientBrush Center="0,1" RadiusX="0.7" RadiusY="0.7" GradientOrigin="0,1">
                                        <GradientStop Color="#00BFA5" Offset="0"/>
                                        <GradientStop Color="#00B0FF" Offset="0.6"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                            </Border>
                            
                            <!-- 第三层装饰渐变 - 中心点缀 -->
                            <Border CornerRadius="12" ClipToBounds="True" Opacity="0.08">
                                <Border.Background>
                                    <RadialGradientBrush Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
                                        <GradientStop Color="#EA80FC" Offset="0"/>
                                        <GradientStop Color="#7C4DFF" Offset="0.5"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>
                        
                        <!-- 磨砂玻璃效果装饰 -->
                        <Canvas>
                            <!-- 左上蓝色光晕 -->
                            <Ellipse Width="160" Height="160" Canvas.Left="-60" Canvas.Top="-60"
                                    Opacity="0.09">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#2196F3" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            
                            <!-- 右下青色光晕 -->
                            <Ellipse Width="130" Height="130" Canvas.Right="-50" Canvas.Bottom="-50"
                                    Opacity="0.09">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#00BCD4" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            
                            <!-- 右上紫色小光晕 -->
                            <Ellipse Width="80" Height="80" Canvas.Right="30" Canvas.Top="-20"
                                    Opacity="0.07">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#9C27B0" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            
                            <!-- 左下绿色小光晕 -->
                            <Ellipse Width="70" Height="70" Canvas.Left="40" Canvas.Bottom="-10"
                                    Opacity="0.06">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#4CAF50" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Canvas>
                    </Grid>
                </Border>
                
                <!-- 内部高光边框效果 -->
                <Border Margin="1" CornerRadius="11" Opacity="0.08">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#FFFFFF" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="0.3"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                
                <!-- 内容区域 -->
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- 标题容器 - 使用Grid实现多层次立体效果 -->
                    <Grid HorizontalAlignment="Center" Margin="0,0,0,15">
                        <!-- 底层阴影文本 - 创建深度感 -->
                        <TextBlock Text="灵曜按键"
                                FontSize="22"
                                FontFamily="Microsoft YaHei UI"
                                FontWeight="Bold"
                                Foreground="#151515"
                                HorizontalAlignment="Center"
                                Margin="2,2,0,0">
                            <TextBlock.Effect>
                                <BlurEffect Radius="2"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        
                        <!-- 主要渐变文本 -->
                        <TextBlock Text="灵曜按键"
                                FontSize="22"
                                FontFamily="Microsoft YaHei UI"
                                FontWeight="Bold"
                                HorizontalAlignment="Center">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FFFFFF" Offset="0"/>
                                    <GradientStop Color="#E0E0FF" Offset="0.5"/>
                                    <GradientStop Color="#CCCCFF" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="3" 
                                                Direction="315" Opacity="0.35" Color="#151515"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        
                        <!-- 顶层光晕效果 - 增强立体感 -->
                        <TextBlock Text="灵曜按键"
                                FontSize="22"
                                FontFamily="Microsoft YaHei UI"
                                FontWeight="Bold"
                                HorizontalAlignment="Center"
                                Foreground="#99FFFFFF"
                                Opacity="0.3">
                            <TextBlock.Effect>
                                <BlurEffect Radius="1.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>

                    <!-- 状态文本 - 使用渐变和阴影增强效果 -->
                    <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,15">
                        <!-- 底层阴影 -->
                        <TextBlock Text="正在启动..."
                                FontFamily="Microsoft YaHei UI"
                                FontSize="14"
                                Foreground="#151515"
                                HorizontalAlignment="Center"
                                Margin="1,1,0,0"
                                Opacity="0.5">
                            <TextBlock.Effect>
                                <BlurEffect Radius="1"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        
                        <!-- 主要状态文本 -->
                        <TextBlock x:Name="StatusText"
                                Text="正在启动..."
                                FontFamily="Microsoft YaHei UI"
                                FontSize="14"
                                HorizontalAlignment="Center">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#E0E0E0" Offset="0"/>
                                    <GradientStop Color="#FFFFFF" Offset="0.5"/>
                                    <GradientStop Color="#E0E0E0" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="0.5" BlurRadius="1.5" 
                                                Direction="315" Opacity="0.3" Color="#151515"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>

                    <!-- 进度条 -->
                    <Grid Grid.Row="2">
                        <!-- 进度条背景 -->
                        <Border Background="#252525" 
                                CornerRadius="3"
                                Height="4">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="2" 
                                                Direction="270" Opacity="0.2" Color="Black"/>
                            </Border.Effect>
                        </Border>
                        
                        <!-- 进度条前景 -->
                        <Border x:Name="ProgressBarContainer" 
                                CornerRadius="3"
                                Height="4" 
                                HorizontalAlignment="Left" 
                                Width="0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#2196F3" Offset="0" />
                                    <GradientStop Color="#00BCD4" Offset="0.5" />
                                    <GradientStop Color="#7C4DFF" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>